<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interfaceFragment.examlist.CreateExamFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Spinner
            android:id="@+id/s_topicModule"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/s_topicModule"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/purpleBlue"
            android:text="Topic Name:"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/i_createTopicName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView14"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:maxLength="100"
            android:maxLines="2"
            android:textColor="@color/black"
            android:text="Enter topic title here"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/t_topicNameTextCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/i_createTopicName"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/purpleBlue"
            android:gravity="end"
            android:text="0/100"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/t_topicNameTextCount"
            android:text="Topic Description:"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/i_createTopicDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/textView15"
            android:background="@android:color/transparent"
            android:layout_above="@+id/b_createTopicConfirm"
            android:text="Enter topic description here"
            android:textColor="@color/black"
            android:gravity="top|start"
            android:padding="5dp"
            android:maxLength="1200"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/t_topicDescriptionTextCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/i_createTopicDescription"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="end"
            android:textColor="@color/purpleBlue"
            android:text="0/1200"
            android:textSize="10sp" />

        <Button
            android:id="@+id/b_createTopicConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/purpleBlue"
            android:textColor="@color/white"
            android:text="SAVE" />

    </RelativeLayout>
</FrameLayout>